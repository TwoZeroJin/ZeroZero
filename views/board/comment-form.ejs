<!--<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">-->
<script src="/js/boardscript.js"></script>
<style>
  .comment-edit,
  .comment-edit-enabled .comment-show {
    display: none;
  }
  .comment-edit-enabled .comment-edit {
    display: inherit;
  }
</style>
</head>

<form action="<%= actionUrl %>" method="post">
  <div <%= !isAuthenticated?'disabled':'' %>>
    <div class="widget-area no-padding blank">
      <div class="status-upload">
        <form>
        <textarea placeholder="댓글을 작성하세요" name="text" style="border: none;"><%= (commentForm._id == comment._id)?commentForm.form.text:comment.text %></textarea>
          <div>
            <% if(comment._id){ %>
              <button type="submit" class="btn btn-primary-1" style="
              float: left;
              margin-bottom: 10px;
          ">수정</button>
              <button class="btn btn-primary-1" style="
              float: left;
              margin-bottom: 10px;
          "><a href="javascript:void(0)" style="color: white;" onclick="$('#comment-<%= comment._id %>').removeClass('comment-edit-enabled')">삭제</a></button>
              <% } else { %>
                <button type="submit" class="btn btn-success green">등록하기</button>
                <% } %>
          </div>
        <% if(commentError._id == comment._id && commentError.errors.text){ %>
          <span><%= commentError.errors.text.message %></span>
        <% } %>
        </form>
      </div>
    </div>
  </div>
</form>
</html>