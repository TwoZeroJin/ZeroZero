    <script src="/js/boardscript.js"></script>
    <script src="/js/validate_board.js"></script>
    <style>
      .comment-edit,
      .comment-edit-enabled .comment-show {
        display: none;
      }
      .comment-edit-enabled .comment-edit {
        display: inherit;
      }
    </style>
  </head>
  <body>
    <div class="wrapper">
      <%- include('../partials/nav') %>

      <section class="visual">
        <div class="container">
          <div class="text-block">
            <div class="heading-holder">
              <section>
              <form action="/qna/<%= qna._id %>?_method=put" method="post">
                <div class="form-group">
                  <label for="title">제목</label>
                  <input type="text" id="title" name="title" value="<%= qna.title %>" class="form-control isTitle">
                  <span style="color:red; font-size:10px" id="noTitle"></span>
                </div>
                <div class="form-group">
                  <label for="body">내용</label>
                    <textarea id="content" name="content" rows="5" class="form-control isContent"><%= qna.content %></textarea>
                    <span style="color:red; font-size:10px" id="noContent"></span>
                </div>
                <div class="new-btn">
                  <a class="btn btn-primary-1" href="/qna/<%= qna._id %>">뒤로</a>
                  <button type="submit" class="btn btn-primary-1" id="canSubmit">수정</button> </div>
                </div>
              </form>
              </section>
            </div>
          </div>
        </div>
      </section>
      <%- include('../partials/head') %>
  </div>
  <script src="./js/jquery-1.11.2.min.js"></script>
  <script src="./js/bootstrap.js"></script>
  <script src="./js/jquery.main.js"></script>
